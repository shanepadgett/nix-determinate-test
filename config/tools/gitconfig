[core]
    editor = code --wait
    autocrlf = input
    safecrlf = true
    excludesfile = ~/.gitignore_global

[push]
    default = simple
    autoSetupRemote = true

[pull]
    rebase = false

[init]
    defaultBranch = main

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

# Include local configuration (user.name, user.email, etc.)
[include]
    path = ~/.gitconfig.local
